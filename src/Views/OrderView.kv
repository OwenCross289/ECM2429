#:kivy 2.0.0
<OrderScreen>:
    MDGridLayout:
        rows: 3
        spacing: 50, 0
        padding: 20, 20

        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
        
            MDLabel:
                id: screen_descriptor
                text: "On this screen you can see the details of the order selected. Once you have picked, printed the shipping label and optionally set a custom email. Click 'Add to Shipping'."

            MDFloatingActionButton:
                icon: "close"
                on_press: root.close_screen() 

        MDGridLayout:
            cols: 2
            size_hint_y: 0.5

            MDBoxLayout:
                orientation: "vertical"
                valign: 'top'
                halign: 'left'

                MDLabel:
                    id: order_id_lbl
                MDLabel:
                    id: order_name_lbl
                MDLabel:
                    id: order_address_lbl
                MDLabel:
                    id: order_post_code_lbl
                MDLabel:
                    id: order_email_lbl
                MDLabel:
                    id: order_status_lbl
            
            MDBoxLayout:
                orientation: "vertical"
                valign: 'top'
                halign: 'left'

                MDLabel:
                    id: item_id_lbl
                MDLabel:
                    id: item_name_lbl
                MDLabel:
                    id: item_price_lbl
                MDLabel:
                    id: item_location_lbl
                MDLabel:
                    id: item_stock_lbl
        
        MDBoxLayout:
            orientation: "vertical"
            size_hint_y: 0.4

            MDGridLayout:
                cols: 3
                spacing: 20
                padding: 20,0,20,20
                size_hint_y: 0.8

                MDTextField:
                    id: custom_email_input
                    mode: "rectangle"
                    multiline: True
                    helper_text: "Enter Custom Email message here"
                    size_hint_y: 0.7
                MDLabel:
                    text: ""
                    size_hint_x: 0.1
                MDRaisedButton:
                    text: "Set Personal Email message"
                    on_press: root.set_custom_email()
                
            MDBoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 0.2
                
                MDRaisedButton:
                    id: print_adress_label_button
                    text: "Print Address Label"
                    on_press: root.print_address_label()

                MDRaisedButton:
                    id: send_shipping_button
                    text: "Add to shipping"
                    on_press: root.add_to_shipping()